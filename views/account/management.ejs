<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title %> | CSE Motors</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <main id="account-management">
    <% if (locals.accountData) { %>
      <h2>Welcome <%= accountData.account_firstname %></h2>
    <% } %>
    
    <%- include('../partials/messages') %>

    <div class="management-content">
      <% if (locals.accountData) { %>
        <p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>
      <% } %>

      <% if (locals.accountData && (accountData.account_type === 'Employee' || accountData.account_type === 'Admin')) { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/">Manage Inventory</a></p>
      <% } %>
    </div>
  </main>

</body>
</html>